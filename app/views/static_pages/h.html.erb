Number of opinions by occupation
<div id="occupations_pie" style="width: 500px; height: 400px;"></div>
Number of opinions by where they studied
<div id="schools_pie" style="width: 500px; height: 400px;"></div>

<script type="text/javascript">
  google.load("visualization", "1", {packages:["corechart"]});
  google.setOnLoadCallback(drawOccupationsChart);
  var occupations = [];
  occupations[0] = ['Occupation', 'link', 'Number'];
  <% @occupations_count.each_with_index do |occupation, index| %>
    occupations[<%= index + 1 %>] = ['<%= occupation[:name].titleize %>', '<%= statement_path(@statement, occupation: occupation[:name]) %>', <%= occupation[:count] %>];
  <% end %>


  google.load("visualization", "1", {packages:["corechart"]});
  google.setOnLoadCallback(drawSchoolsChart);
  var schools = [];
  schools[0] = ['School', 'link', 'Number'];
  <% @schools_count.each_with_index do |school, index| %>
    schools[<%= index + 1 %>] = ['<%= school[:name].titleize %>', '<%= statement_path(@statement, educated_at: school[:name]) %>', <%= school[:count] %>];
  <% end %>
</script>
