.jumbotron
  .text-center
    %h1 Liquid Democracy
    %h5 mix of direct & representative democracy
    %br
    = button_to "/", class: "btn btn-primary btn-lg" do
      Join

.content
  #statements
    .row
      - 3.times do |i|
        = render partial: "row", locals: { statement: @statements[i], individual: @individuals[i] }
    .row
      - 3.times do |i|
        = render partial: "row", locals: { statement: @statements[i + 3], individual: @individuals[i + 3] }
  #info
    = "..."
