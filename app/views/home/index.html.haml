.container
  .row
    .col-sm-6
      %h1 Example of statements:
      - @statements.each do |statement|
        %p= link_to statement.content, statement_path(statement)
    .col-sm-6
      - if current_user
        %h1 Discover opinions:
        .home-buttons
          = link_to "Search", search_path, class: "btn btn-primary"
          or
          = link_to "Browse", new_path
      - else
        %h1 Join to see more
        .home-buttons
          %p
            = link_to image_tag("twitter-login.png"), "/auth/twitter", id: "twitter-login"
          %p
            or
            = link_to "Sign up with email", signup_path
            = "/"
            = link_to "Log in", login_path
