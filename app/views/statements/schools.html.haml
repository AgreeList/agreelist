.container
  %h1= link_to @statement.content, statement_path(@statement)
  %table.table
    %tr
      %th Alma mater
      %th Percentage who agrees
      %th Number of people
    - @schools_count.each do |school|
      %tr
        - url = statement_path(@statement, "alma-mater" => school[:name])
        %td= link_to school[:name].titleize.gsub("Of", "of"), url
        %td= link_to "#{school[:percentage_who_agrees]}%", url
        %td= link_to school[:count], url
  = "* This list only includes the occupations with at least #{@min_count} people"
  |
  = link_to "See all #{@agreements_count} opinions or votes", statement_path(@statement)
