%br
#ol
  - agreements.each do |agreement|
    - individual = agreement.individual
    .media
      .media-left
        = image_tag(individual.picture.url(:thumb), class: "picture media-object")
      .media-body
        %h4.media-heading
          %span.name= individual.name || individual.twitter
          %span.source
            - if agreement.url.present? && agreement.url != "http://"
              = link_to "source", agreement.url
        #br
        = individual.bio.present? ? individual.bio : individual.description
        - if admin?
          = link_to "edit", edit_individual_path(individual) + "?back_url=#{request.url}"
          |
          = link_to("delete", agreement, method: :delete, data: { confirm: "You sure?" })
        - if @statement.id == 7 # brexit
          %br
          %br
          - if agreement.reason.present?
            %i= agreement.reason
            = link_to(image_tag("agree.png", class: "vote-icon"), "#", onclick: 'alert("This feature is not ready yet!")')
            = link_to(image_tag("disagree.png", class: "vote-icon"), "#", onclick: 'alert("This feature is not ready yet!")')
          
    #br
