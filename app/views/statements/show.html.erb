<p id="notice"><%= notice %></p>

<p>
  <h1><%= @statement.content %></h1>
</p>

<% if @agreements.any? %>
  <h3><%= @statement.individuals.count %> seem to agree:</h3>
  <ol>
    <% @agreements.each do |agreement| %>
      <% individual = agreement.individual %>
      <%= link_to(individual.name, individual_path(individual)) %>
       (<%= link_to('source', agreement.url) %>)
      <%= link_to("delete", agreement, method: :delete, data: { confirm: "You sure?" }) %>
      <br />
    <% end %>
  </ol>
<% end %>


