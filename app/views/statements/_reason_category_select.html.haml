- if has_admin_category_rights? && agreement.reason.present?
  = form_for agreement do |f|
    Category:
    = f.select :reason_category_id, @categories.map{|c| [c.name, c.id]}, {include_blank: true}, class: "reason_category", id: "reason_category_from_agreement_#{agreement.id}", agreement_id: agreement.id, agreement_hashed_id: agreement.hashed_id
    = f.hidden_field :reason
    = link_to "Edit categories", reason_categories_path
