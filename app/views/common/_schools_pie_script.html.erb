<script type="text/javascript">
  google.load("visualization", "1", {packages:["corechart"]});
  google.setOnLoadCallback(drawSchoolsChart);
  var schools = [];
  schools[0] = ['School', 'link', 'Number'];
  <% @schools_count.each_with_index do |school, index| %>
    <% name = school[0] %>
    <% count = school[1] %>
    schools[<%= index + 1 %>] = ['<%= name.titleize %>', '<%= statement_path(@statement, educated_at: name) %>', <%= count %>];
  <% end %>
</script>
