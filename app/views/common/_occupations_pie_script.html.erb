<script type="text/javascript">
  google.load("visualization", "1", {packages:["corechart"]});
  google.setOnLoadCallback(drawOccupationsChart);
  var occupations = [];
  occupations[0] = ['Occupation', 'link', 'Number'];
  <% @occupations_count.each_with_index do |occupation, index| %>
    <% name = occupation[0] %>
    <% count = occupation[1] %>
    <% if @statement.present? && @statement.persisted? %>
      <% link = statement_path(@statement, occupation: name) %>
    <% else %>
      <% link = occupation_tag_path(name) %>
    <% end %>
    occupations[<%= index + 1 %>] = ['<%= name.titleize %>', '<%= link %>', <%= count %>];
  <% end %>
</script>
