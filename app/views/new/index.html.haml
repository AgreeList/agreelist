.container
  #home-header.text-center
    = react_component('HelloMessage', name: 'Hec')
    %p= render partial: "common/back_or_sponsor_us_button"
  = render partial: "filters"
  = render partial: "common/opinions", locals: { agreements: @agreements }
  = render partial: "common/pies" if @occupations_count.size > 2 && @schools_count.size > 2
#myModal.modal.fade{role: "dialog"}
  .modal-dialog
    .modal-content
      .modal-header.text-center
        %h3 Log in to vote
      .modal-body.text-center
        = link_to image_tag("twitter-login.png"), "/auth/twitter", id: "vote-twitter-login"
        %h3 No Twitter?
        = link_to "Log in with your email", login_path, class: "btn btn-primary"
        or
        = link_to "Back", "#", "data-dismiss" => "modal"
#loginToCreate.modal.fade{role: "dialog"}
  .modal-dialog
    .modal-content
      .modal-header.text-center
        %h3 Login in to post
      .modal-body.text-center
        = link_to image_tag("twitter-login.png"), "/auth/twitter", id: "create-twitter-login"
        %h3 No Twitter?
        = link_to "Log in with your email", login_path, class: "btn btn-primary"
        or
        = link_to "Back", "#", "data-dismiss" => "modal"
