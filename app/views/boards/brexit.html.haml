.container
  %h1 Do you agree that the UK should remain in the EU?
  .row
    .col-md-6
      %h3
        = "Yes, I agree ("
        = link_to "#{@percentage_in_favor}% of Votes", statement_path(@statement)
        = ")"
      - @categories_in_favor.each do |category|
        = render partial: "category", locals: {category_name: category.name, count: category.agreements.size}
      = render partial: "category", locals: {category_name: "Others", count: @votes_in_favor_without_category_count}
    .col-md-6
      %h3
        = "No, I disagree ("
        = link_to "#{100 - @percentage_in_favor}% of Votes", statement_path(@statement)
        = ")"

      - @categories_against.each do |category|
        = render partial: "category", locals: {category_name: category.name, count: category.agreements.size}
      = render partial: "category", locals: {category_name: "Others", count: @votes_against_without_category_count}
