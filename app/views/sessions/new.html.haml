.container
  %h5 Do you have a Twitter account?
  %p
    = radio_button_tag :login_with, "twitter"
    = "Yes, log in with Twitter"
    = link_to image_tag("twitter-login.png"), "/auth/twitter", id: "twitter-login"
  %p
    = radio_button_tag :login_with, "email"
    = "No, log in with my email account:"
  = form_tag sessions_path do
    .field
      = label_tag :email
      = text_field_tag :email, "", class: "form-control"
    .field
      = label_tag :password
      = "-"
      = link_to "Forgot?", new_reset_password_path
      = password_field_tag :password, "", class: "form-control"
      = hidden_field_tag :task, params[:task]
      = hidden_field_tag :agreement_id, params[:agreement_id]
      = hidden_field_tag :statement_id, params[:statement_id]
      = hidden_field_tag :vote, params[:vote]
    %p
      .actions
        = submit_tag "Log in", class: "btn btn-primary"
    %h3
      New to Agreelist?
      = link_to "Sign up!", signup_path(task: params[:task], agreement_id: params[:agreement_id]), class: "btn btn-primary"
