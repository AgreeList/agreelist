= form_for @reason_category do |f|
  - if @reason_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reason_category.errors.count, "error")} prohibited this reason_category from being saved:"
      %ul
        - @reason_category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, class: "form-control"
  .actions
    = f.submit 'Save', class: "btn btn-primary"
