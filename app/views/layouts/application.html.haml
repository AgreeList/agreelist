!!! 5
%html
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title AgreeList Â· Tracking influencers' opinions
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag "https://www.gstatic.com/charts/loader.js", async: true
    :javascript
      logged_in = #{signed_in?};
      dataLayer = [
        { 'pageType': '#{@page_type}'}
      ];
      if(logged_in){
        dataLayer.push({'user_id': '#{current_user.try(:id)}'});
      }
  %body
    %section.main-container
      = render 'layouts/header'
      - flash.each do |key, value|
        - if key == "notice"
          .alert.alert-success= value
        - elsif key == "error"
          .alert.alert-danger= value
      = yield
      = render 'layouts/footer'
