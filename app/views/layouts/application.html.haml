!!! 5
%html
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = display_meta_tags
    = render partial: "layouts/data_layer" if Rails.env.production?
    = render partial: 'layouts/gtm_header' if Rails.env.production?
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = stylesheet_link_tag    "application", :media => "all", async: true
    = javascript_include_tag "application"
    = javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/easy-autocomplete/1.3.5/jquery.easy-autocomplete.js"
    = stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/easy-autocomplete/1.3.5/easy-autocomplete.css", async: true
  %body
    = render partial: 'layouts/gtm_body' if Rails.env.production?
    %section.main-container
      = render 'layouts/cookie_consent'
      = render 'layouts/header'
      - flash.each do |key, value|
        - if key == "notice"
          .alert.alert-success= value
        - elsif key == "error"
          .alert.alert-danger= value
      = yield
      = render 'layouts/footer'
