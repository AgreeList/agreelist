%header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      = link_to "AgreeList", root_path, id: "logo"
      .navbar-collapse.collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav.pull-right
          %li= link_to "New", "/statement" if current_user
          %li= link_to "Profile", profile_path(current_user.twitter) if current_user
          %li= link_to "Sign in with Twitter", "/auth/twitter" unless current_user
          %li= link_to "Contact", "/contact"
          %li= link_to "Sign Out", signout_path if current_user
