%nav.navbar.navbar-fixed-top.navbar-inverse
  .container-fluid
    .navbar-inner
      %button{type: "button", class: "navbar-toggle collapsed", "data-toggle" => "collapse", "data-target" => "#navbar-collapse"}
        %span{class: "sr-only"}
        %span{class: "icon-bar"}
        %span{class: "icon-bar"}
        %span{class: "icon-bar"}
      #logo-and-subtitle
        #logo-div
          = link_to "Agreelist", root_path, id: "logo"
        %span#logo-subtitle Tracking influencers' opinions
      .pull-right
        %ul.nav.navbar-nav
          %li= link_to "+", new_statement_path, id: "new_statement_plus"

        %ul.nav.navbar-nav.collapse.navbar-collapse#navbar-collapse
          %li= link_to "Sign in", login_path unless current_user
          %li= link_to "#{current_user.visible_name} (#{current_user.karma})", "/#{current_user.to_param}" if current_user
          %li= link_to "Search", new_search_path
          %li= link_to "Topics", all_path
          %li= link_to "About", "/about"
          %li= link_to "Contact", contact_path
          %li= link_to "Sign Out", signout_path if current_user
          %a{href: "#", class: "dropdown-toggle", "data-toggle" => "dropdown", role: "button", "aria-expanded" => "false"}
      .navbar-collapse.collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav.pull-right
